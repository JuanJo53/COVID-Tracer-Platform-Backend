<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.covid_tracer_platform_backend.dao.ConfirmedDao">
    <insert id="createConfirmed" parameterType="bo.ucb.edu.covid_tracer_platform_backend.model.Confirmed">
        INSERT INTO confirmed VALUES (
            null, #{departmentId}, #{count}, #{cumulative}, #{date},
            1, #{transaction.txId}, #{transaction.txHost}, #{transaction.txUserId}, #{transaction.txDate}
        )
    </insert>

    <select id="lastDate" resultType="java.util.Date">
        SELECT MAX(date)
        FROM confirmed
        WHERE
            department_id = #{departmentId}
            and status = 1
    </select>
</mapper>
