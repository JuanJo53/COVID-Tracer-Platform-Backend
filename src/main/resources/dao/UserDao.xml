<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.covid_tracer_platform_backend.dao.UserDao">
    <insert id="createUser" parameterType="bo.ucb.edu.covid_tracer_platform_backend.model.UserM">
        INSERT INTO userM VALUES (
            null, #{personId}, #{email}, #{userName}, #{password},
            1, #{transaction.txId}, #{transaction.txHost}, #{transaction.txUserId}, #{transaction.txDate}
        )
    </insert>

    <select id="findUserByUserName" resultType="bo.ucb.edu.covid_tracer_platform_backend.model.UserM">
        SELECT user_id as userId,
               person_id as personId,
               email as email,
               user_name as userName,
               password as password
        FROM userM
        WHERE
            user_name = #{userName}
            and status = 1
    </select>
</mapper>
